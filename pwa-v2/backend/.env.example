# ========================================
# RelatoRecibo Backend - Environment Variables
# ========================================
# Copy this file to .env and fill with your values
# NEVER commit .env to git (it's in .gitignore)

# ----------------------------------------
# Application Settings
# ----------------------------------------
ENVIRONMENT=development
PROJECT_NAME=RelatoRecibo API
VERSION=2.0.0

# ----------------------------------------
# API Configuration
# ----------------------------------------
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# ----------------------------------------
# CORS - Allowed Origins (comma-separated)
# ----------------------------------------
# Development
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000
# Production (example)
# ALLOWED_ORIGINS=https://relatorecibo.vercel.app,https://www.relatorecibo.com

# ----------------------------------------
# Supabase Configuration
# ----------------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ----------------------------------------
# JWT / Authentication
# ----------------------------------------
# Generate a secure random key: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ----------------------------------------
# File Upload Settings
# ----------------------------------------
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.webp
UPLOAD_DIR=uploads

# ----------------------------------------
# OCR Configuration (Tesseract)
# ----------------------------------------
TESSERACT_LANG=por
OCR_TIMEOUT=30
TESSERACT_PATH=/usr/bin/tesseract

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
RATE_LIMIT_PER_MINUTE=60

# ----------------------------------------
# Logging
# ----------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=500 MB
LOG_RETENTION=10 days

# ----------------------------------------
# Database (Supabase PostgreSQL)
# ----------------------------------------
# Usually not needed as we use Supabase client
# But can be useful for direct connections
# DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ----------------------------------------
# Storage (Supabase Storage)
# ----------------------------------------
STORAGE_BUCKET_NAME=receipts
STORAGE_MAX_FILE_SIZE=5242880

# ----------------------------------------
# Email (Optional - for notifications)
# ----------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@relatorecibo.com

# ----------------------------------------
# Sentry (Optional - for error tracking)
# ----------------------------------------
# SENTRY_DSN=https://your-sentry-dsn-here

# ----------------------------------------
# Redis (Optional - for caching)
# ----------------------------------------
# REDIS_URL=redis://localhost:6379/0

# ----------------------------------------
# Development/Debug
# ----------------------------------------
DEBUG=true
RELOAD=true
